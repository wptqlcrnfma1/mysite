<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">
	
	<select id="findAll" parameterType="list" resultType="guestbookvo">
		<![CDATA[
			select no, name, contents, password, reg_date from guestbook order by no desc
		]]>
	</select>
	
	<select id="findAll2" parameterType="map" resultType="guestbookvo">
		<![CDATA[
			select no, name, contents, password, reg_date from guestbook order by no desc
		]]>
	</select>
	
	<insert id="insert" parameterType="guestbookvo">
		<![CDATA[
  			insert into guestbook values(null, #{name}, #{contents}, #{password}, now())
		]]>

	</insert>	
	
	<delete id="delete" parameterType="map">
		<![CDATA[
		delete from guestbook where no = #{no} and password = #{password}
		]]>
	</delete>

</mapper>
